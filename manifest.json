{
    "manifest_version": 3,
    "name": "WebBlock",
    "version": "1.0",
    "permissions": [
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_start"
    }],
    "action": {
        "default_popup": "popup/popup.html"
    }
}